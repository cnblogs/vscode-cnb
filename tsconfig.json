{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "outDir": "out",
        "sourceMap": true,
        "rootDir": "src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "strict": true,
        "resolveJsonModule": true
    },
    "exclude": [".vscode-test", "ui", "src/test", "test", "__mocks__"]
}
